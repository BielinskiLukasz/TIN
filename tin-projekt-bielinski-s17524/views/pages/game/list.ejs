<%- include('../../fragments/header.ejs') %>

<main>
    <h2>Lista graczy</h2>

    <div class="table-div">
        <table class="table-list">
            <thead>
                <tr>
                    <th scope="col">Tytuł</th>
                    <th scope="col">Twoja ocena</th>
                    <th scope="col">Średnia ocena</th>
                    <th scope="col">Ilość ocen</th>
                    <th scope="col">Akcje</th>
                </tr>
            </thead>
            <tbody>
                <% for (let game of games) { %>
                <tr>
                    <td><a href="/games/details/<%= game._id %>" class="link-line"><%= game.gameName %></a></td>
                    <td class="td-center">do uzupełnienia</td>
                    <td class="td-center"><%= game.averageRate %></td>
                    <td class="td-center">do uzupełnienia</td>
                    <td>
                        <ul class="list-actions">
                            <li><a href="/rate/<%=game._id%>" class="list-actions-button-score">Oceń</a></li>
                            <li><a href="/game/details/<%=game._id%>" class="list-actions-button-details">Szczegóły</a>
                            </li>
                            <li><a href="/game/edit/<%=game._id%>" class="list-actions-button-edit">Edytuj</a></li>
                            <li><a href="/game/delete/<%=game._id%>" class="list-actions-button-delete">Usuń</a></li>
                        </ul>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <p><a href="/game/add" class="button-add">Dodaj nową grę</a></p>
</main>

<%- include('../../fragments/footer.ejs') %>