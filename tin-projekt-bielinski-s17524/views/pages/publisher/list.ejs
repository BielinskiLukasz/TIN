<%- include('../../fragments/header.ejs') %>

<main>
    <h2>Lista wydawnictw</h2>

    <div class="table-div">
        <table class="table-list">
            <thead>
                <tr>
                    <th scope="col">Wydawnictwo</th>
                    <th scope="col">Nick</th>
                    <th scope="col">Siedziba</th>
                    <th scope="col">Akcje</th>
                </tr>
            </thead>
            <tbody>
                <% for (let publisher of publishers) { %>
                <tr>
                    <td><%= publisher.name %></td>
                    <td><%= publisher.nick %></td>
                    <td><%= publisher.headquarters %></td>
                    <td>
                        <ul class="list-actions">
                            <li><a href="/publisher/details/<%= publisher._id %>"
                                    class="list-actions-button-details">Szczegóły</a></li>
                            <li><a href="/publisher/edit/<%= publisher._id %>"
                                    class="list-actions-button-edit">Edytuj</a>
                            </li>
                            <li><a href="/publisher/delete/<%= publisher._id %>"
                                    class="list-actions-button-delete">Usuń</a></li>
                        </ul>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <p><a href="/publisher/add" class="button-add">Dodaj nowe wydawnictwo</a></p>
</main>

<%- include('../../fragments/footer.ejs') %>