    <script type="application/javascript" src="<%= navLocation == 'creatorForm' ? '/javascripts/validationCreatorForm.js' : 
        navLocation == 'gameForm' ? '/javascripts/validationGameForm.js' : 
        navLocation == 'rateForm' ? '/javascripts/validationRateForm.js' :
        navLocation == 'gamerForm' ? '/javascripts/validationGamerForm.js' : 
        navLocation == 'publisherForm' ? '/javascripts/validationPublisherForm.js' : ''%>"></script> -->
</head>

<body>
    <header>
        <h1>Giercownia</h1>
        <img class="header-logo" src="/images/logo.png" alt="Giercownia Logo">
    </header>

    <nav>
        <ul>
            <li><a href="/" class="<%= navLocation == 'main' ? 'active' : ''%>">Strona główna</a></li>
            <% if (loggedUser) { %>
            <li><a href="/publisher" class="<%= navLocation == 'publishers' ? 'active' : ''%>">Wydawnictwa</a></li>
            <% } %>
            <li><a href="/game" class="<%= navLocation == 'games' ? 'active' : ''%>">Gry</a></li>
            <% if (loggedUser) { %>
            <li><a href="/rate" class="<%= navLocation == 'rates' ? 'active' : ''%>">Oceny</a></li>
            <li><a href="/gamer" class="<%= navLocation == 'gamers' ? 'active' : ''%>">Gracze</a></li>
            <% } %>
            <% if (loggedUser) { %>
            <li><a href="/profile" class="<%= navLocation == 'profile' ? 'active' : ''%>">Profil <%= loggedUser.nick %>
                </a></li>
            <li><a href="/rate/my-scores" class="<%= navLocation == 'my-scores' ? 'active' : ''%>">Moje oceny</a></li>
            <li><a href="/logout" class="<%= navLocation == 'logout' ? 'active' : ''%>">Wyloguj</a></li>
            <% } else { %>
            <li><a href="/sign" class="<%= navLocation == 'newUser' ? 'active' : ''%>">Zarejestruj</a></li>
            <li><a href="/login" class="<%= navLocation == 'login' ? 'active' : ''%>">Zaloguj</a></li>
            <% } %>
        </ul>
    </nav>